# Snapshot UI Configuration for ElGamal Encrypted Voting PoC
# Copy this file to .env.local to use the local ElGamal backend

# Main API endpoint - points to our GraphQL adapter on port 4001
VITE_UNIFIED_API_URL=http://localhost:4001/graphql
VITE_UNIFIED_API_TESTNET_URL=http://localhost:4001/graphql

# Network Configuration
VITE_DEFAULT_NETWORK=eth
VITE_ENABLED_NETWORKS=eth,sep,matic,arb1,base

# Metadata network for user profiles
VITE_METADATA_NETWORK=eth

# Optional: Disable features not needed for PoC
VITE_ENABLE_GOVERNOR_BRAVO=false
